{
  "name": "roverfox-client",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "prettier --ignore-path ../../.prettierignore --write . && eslint . --fix",
    "lint.check": "prettier --ignore-path ../../.prettierignore --check . && eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "build": "rollup -c && cp -r src/scripts dist/scripts && cp src/browserConfig.json dist/browserConfig.json",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "browser",
    "automation",
    "playwright",
    "firefox",
    "testing",
    "web-scraping"
  ],
  "author": "",
  "description": "A browser automation client built on Playwright for Firefox",
  "prettier": "@roverfox/prettier-config",
  "dependencies": {
    "@logtail/node": "^0.5.6",
    "@small-tech/auto-encrypt": "^4.3.0",
    "axios": "^1.11.0",
    "playwright": "^1.56.1",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-typescript": "^12.3.0",
    "@roverfox/eslint-config": "*",
    "@roverfox/prettier-config": "*",
    "@roverfox/typescript-config": "*",
    "@types/ws": "^8.18.1",
    "rollup": "^4.57.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.57.1"
  }
}
